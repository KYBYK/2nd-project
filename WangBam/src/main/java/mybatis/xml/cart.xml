<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cart">

<!-- <select>장바구니  조회 -->
<select id="all" parameterType="int" resultType="mybatis.vo.CartVO">
select * from cart_t
where us_idx = #{us_idx}
</select>

<!-- 장바구니 추가 -->
<insert id="add" parameterType="Map">
insert into cart_t(ca_idx, us_idx, ca_product_idx, ca_cnt)values(#{ca_idx}, #{us_idx}, #{ca_product_idx}, #{ca_cnt})
</insert> 

<!-- <update>상품 수량만 수정 가능 -->
<update id="update" parameterType="Map">
update cart_t set ca_cnt = #{ca_cnt}
where ca_idx = #{ca_idx}
</update> 

<!-- <delete>장바구니 선택 삭제 가능 --> 
<delete id="delete" parameterType="String">
delete from cart_t
where ca_idx = #{ca_idx}
</delete>
